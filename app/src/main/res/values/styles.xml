<resources>

    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/Semitransparent</item>
    </style>

    <style name="Semitransparent" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">#82000000</item>
        <item name="android:icon">@drawable/ic_camera_roll_white_36dp</item>
        <item name="android:homeAsUpIndicator">@android:color/transparent</item>
        <item name="android:displayOptions">showCustom</item>
        <item name="android:customNavigationLayout">@layout/custom_ab</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="android:Theme.Holo.NoActionBar">
    </style>

</resources>
